# ===== 数据库配置 =====
DB_USERNAME=travel_user
DB_PASSWORD=travel_password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=travel_planner

# ===== Redis配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== 高德地图API =====
# 申请地址: https://lbs.amap.com/
AMAP_API_KEY=your_amap_api_key_here
AMAP_WEB_KEY=your_amap_web_key_here

# ===== 科大讯飞语音API =====
# 申请地址: https://www.xfyun.cn/
XUNFEI_APP_ID=your_xunfei_app_id_here
XUNFEI_API_KEY=your_xunfei_api_key_here
XUNFEI_API_SECRET=your_xunfei_api_secret_here

# ===== 阿里云百炼平台 =====
# 申请地址: https://bailian.console.aliyun.com/
ALIBABA_CLOUD_ACCESS_KEY_ID=your_alibaba_access_key_id_here
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your_alibaba_access_key_secret_here
ALIBABA_CLOUD_REGION=cn-hangzhou

# ===== JWT配置 =====
JWT_SECRET=your_jwt_secret_key_here_should_be_very_long_and_random
JWT_EXPIRATION=86400000

# ===== 文件上传配置 =====
# 阿里云OSS配置
OSS_ENDPOINT=your_oss_endpoint_here
OSS_BUCKET_NAME=your_bucket_name_here
OSS_ACCESS_KEY_ID=${ALIBABA_CLOUD_ACCESS_KEY_ID}
OSS_ACCESS_KEY_SECRET=${ALIBABA_CLOUD_ACCESS_KEY_SECRET}

# ===== 邮件服务配置 =====
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password_here

# ===== 应用配置 =====
APP_NAME=AI Travel Planner
APP_VERSION=1.0.0
APP_ENV=development

# ===== 前端配置 =====
VUE_APP_API_BASE_URL=http://localhost:8080/api
VUE_APP_AMAP_KEY=${AMAP_WEB_KEY}
# Vite front-end keys (used by /frontend)
VITE_AMAP_KEY=${AMAP_WEB_KEY}
VITE_API_BASE_URL=http://localhost:8080/api

# ===== 其他第三方服务 =====
# 如果使用其他LLM服务，可以在这里配置
OPENAI_API_KEY=your_openai_api_key_here
BAIDU_API_KEY=your_baidu_api_key_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here